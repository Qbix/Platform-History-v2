<html>
{{#if (call 'message.getInstruction' 'toUrl')}}
	<h2><a href="{{call 'message.getInstruction' 'toUrl'}}">{{stream.fields.title}}</a></h2>
{{else}}
	<h2>{{stream.fields.title}}</h2>
{{/if}}
<div>
{{messages.text.relatedTo.hasANew}} {{call 'message.getInstruction' 'fromDisplayType'}}:
</div>
{{#if (call 'message.getInstruction' 'fromUrl')}}
	<h2><a href="{{call 'message.getInstruction' 'fromUrl'}}">{{call 'message.getInstruction' 'fromTitle'}}</a></h2>
{{else}}
	<h2>{{call 'message.getInstruction' 'fromTitle'}}</h2>
{{/if}}
<div>
	{{interpolate messages.text.relatedTo.byAvatar this}}
</div>
<hr>
<p>{{notifications.IfUnsubscribe}}, <a href="{{baseUrl}}/Streams/participating">{{notifications.ManageEmailSubscriptions}}</a></p>
</html>